package com.gerken.sofa.bolt;

import com.gerken.sofa.bean.*;
import com.gerken.sofa.logic.*;
import com.gerken.sofa.topology.StackoverflowAnalyticsTopology;
import com.gerken.sofa.util.IStackoverflowAnalyticsLogger;

import backtype.storm.task.OutputCollector;
import backtype.storm.task.TopologyContext;
import backtype.storm.topology.IRichBolt;
import backtype.storm.topology.OutputFieldsDeclarer;
import backtype.storm.tuple.Fields;
import backtype.storm.tuple.Tuple;
import backtype.storm.tuple.Values;

import java.util.Map; 

public class OpRepAnalyticsBolt implements IRichBolt, IOpRepAnalyticsBolt {

	private static final long serialVersionUID = 1L;
	private OutputCollector collector;
	private Map<String, Object> config;
    private static final IStackoverflowAnalyticsLogger log = StackoverflowAnalyticsTopology.getLogger();
	private OpRepAnalyticsBoltLogic logic = new OpRepAnalyticsBoltLogic();
	private Tuple anchor = null;
	private int taskId;	

	@SuppressWarnings({ "unchecked", "rawtypes" })
	@Override
    public void prepare(Map config, TopologyContext context, OutputCollector collector) {
        this.collector = collector;
        this.config = config;
         try { taskId = context.getThisTaskId(); }
        catch (Throwable t) { taskId = 1; }
        logic.prepare(config,context,this);		
    }

	/*
	 *  Emits an instance of OpRepBestFit to stream OpRepBestFits
	 */
	public void emitToOpRepBestFits(OpRepBestFit opRepBestFit) {
		Values values = opRepBestFit.asValues();
		collector.emit("OpRepBestFits",anchor,values);
	}


	/*
	 *  Emits an instance of OpRepBestFit to stream OpRepBestFits
	 */
	public void emitToOpRepBestFitsWithoutAnchor(OpRepBestFit opRepBestFit) {
		Values values = opRepBestFit.asValues();
		collector.emit("OpRepBestFits",values);
	}

    @Override
    public void execute(Tuple tuple) {
    	anchor = tuple;
	    try {
	    	if ("RepStats".equals(tuple.getSourceStreamId())) {
	    		RepStat repStat = new RepStat(tuple);
	            logic.readFromRepStats(repStat, this);
	    	}
	
		} catch (Exception e) { 
			log.severe("OpRepAnalyticsBolt", "execute", "Error executing Tuple", e); 
	    }
	}
	
    @Override
    /*
    *  NOTE: This method is not guaranteed to get called! Do not depend on it!
    */
    public void cleanup() {
		logic.cleanup(this);
    }

    @Override
    public void declareOutputFields(OutputFieldsDeclarer declarer) {
        declarer.declareStream("OpRepBestFits",new Fields("userId", "tag", "coefficients"));
    }
    
    public void ack() {
    	collector.ack(anchor);
    }
    
    public void fail() {
    	collector.fail(anchor);
    }

	@Override
	public Map<String, Object> getComponentConfiguration() {
		return config;
	}
	
	@Override
	public int getTaskId() {
		return taskId;
	}

}
