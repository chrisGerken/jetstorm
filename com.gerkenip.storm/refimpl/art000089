package com.gerken.sofa.bolt;

import com.gerken.sofa.bean.*;
import com.gerken.sofa.logic.*;
import com.gerken.sofa.topology.StackoverflowAnalyticsTopology;
import com.gerken.sofa.util.IStackoverflowAnalyticsLogger;

import backtype.storm.task.OutputCollector;
import backtype.storm.task.TopologyContext;
import backtype.storm.topology.IRichBolt;
import backtype.storm.topology.OutputFieldsDeclarer;
import backtype.storm.tuple.Fields;
import backtype.storm.tuple.Tuple;
import backtype.storm.tuple.Values;

import java.util.Map; 

public class UserReaderBolt implements IRichBolt, IUserReaderBolt {

	private static final long serialVersionUID = 1L;
	private OutputCollector collector;
	private Map<String, Object> config;
    private static final IStackoverflowAnalyticsLogger log = StackoverflowAnalyticsTopology.getLogger();
	private UserReaderBoltLogic logic = new UserReaderBoltLogic();
	private Tuple anchor = null;
	private int taskId;	

	@SuppressWarnings({ "unchecked", "rawtypes" })
	@Override
    public void prepare(Map config, TopologyContext context, OutputCollector collector) {
        this.collector = collector;
        this.config = config;
         try { taskId = context.getThisTaskId(); }
        catch (Throwable t) { taskId = 1; }
        logic.prepare(config,context,this);		
    }

	/*
	 *  Emits an instance of AnswerSpec to stream Answers
	 */
	public void emitToAnswers(AnswerSpec answerSpec) {
		Values values = answerSpec.asValues();
		collector.emit("Answers",anchor,values);
	}


	/*
	 *  Emits an instance of AnswerSpec to stream Answers
	 */
	public void emitToAnswersWithoutAnchor(AnswerSpec answerSpec) {
		Values values = answerSpec.asValues();
		collector.emit("Answers",values);
	}

	/*
	 *  Emits an instance of EarnedTagInfo to stream Tags
	 */
	public void emitToTags(EarnedTagInfo earnedTagInfo) {
		Values values = earnedTagInfo.asValues();
		collector.emit("Tags",anchor,values);
	}


	/*
	 *  Emits an instance of EarnedTagInfo to stream Tags
	 */
	public void emitToTagsWithoutAnchor(EarnedTagInfo earnedTagInfo) {
		Values values = earnedTagInfo.asValues();
		collector.emit("Tags",values);
	}

    @Override
    public void execute(Tuple tuple) {
    	anchor = tuple;
	    try {
	    	if ("Users".equals(tuple.getSourceStreamId())) {
	    		UserSpec userSpec = new UserSpec(tuple);
	            logic.readFromUsers(userSpec, this);
	    	}
	
		} catch (Exception e) { 
			log.severe("UserReaderBolt", "execute", "Error executing Tuple", e); 
	    }
	}
	
    @Override
    /*
    *  NOTE: This method is not guaranteed to get called! Do not depend on it!
    */
    public void cleanup() {
		logic.cleanup(this);
    }

    @Override
    public void declareOutputFields(OutputFieldsDeclarer declarer) {
        declarer.declareStream("Answers",new Fields("answerId", "userId", "questionId", "userAnswerRep", "userTotalRep"));
        declarer.declareStream("Tags",new Fields("userId", "tag", "count"));
    }
    
    public void ack() {
    	collector.ack(anchor);
    }
    
    public void fail() {
    	collector.fail(anchor);
    }

	@Override
	public Map<String, Object> getComponentConfiguration() {
		return config;
	}
	
	@Override
	public int getTaskId() {
		return taskId;
	}

}
